{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "src/test/**/*.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/__tests__/*.ts",
        "src/**/__tests__/*.tsx",
        "vitest.config.mts"
    ],
    "exclude": [
        "node_modules"
    ]
}