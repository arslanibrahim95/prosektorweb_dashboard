# Production security profile (API)
# Copy these entries into your production secret store / .env.

# Proxy trust configuration
# Current repo topology recommendation:
# Internet -> nginx -> api
TRUSTED_PROXY_COUNT=0

# CV upload AV scanning
# Start with fail-open for rollout; switch AV_SCAN_FAIL_CLOSED=true after stability period.
AV_SCAN_ENABLED=true
AV_SCAN_FAIL_CLOSED=false
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
CLAMAV_TIMEOUT_MS=2500

